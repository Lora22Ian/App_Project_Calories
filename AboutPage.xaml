<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Project_Calories.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="calories_calculator.png"
            SemanticProperties.Description="Calorie Calculator"
            HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Calorie Calculator" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app helps you calculate and track your daily calorie intake." />
    </VerticalStackLayout>
</ContentPage>