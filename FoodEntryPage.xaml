<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Project_Calories.FoodEntryPage"
             Title="FoodEntryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Food" Clicked="OnFoodAddedClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <!-- Existing ListView -->
        <ListView x:Name="listView" Margin="20" ItemSelected="OnFoodViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Calories} " />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Label for displaying selected category -->
        <Label x:Name="selectedCategoryLabel" Text="" Margin="20" />
    </StackLayout>
</ContentPage>
