<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Project_Calories.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="0"
            VerticalOptions="Center">

            <Image
                Source="avocado.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="400"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to Calorie Calculator App!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Start your healthy journey with our calorie calculator."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Calculate and track your daily calorie intake."
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Go to Calorie Calculator"
                SemanticProperties.Hint="Navigate to the Calorie Calculator"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

       </VerticalStackLayout>
    </ScrollView>

</ContentPage>
